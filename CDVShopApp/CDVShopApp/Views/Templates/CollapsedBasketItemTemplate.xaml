<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CDVShopApp.Views.Templates.CollapsedBasketItemTemplate">
    <ContentView.Content>
        <Grid
    
    HeightRequest="36"
    WidthRequest="36"
    VerticalOptions="Center"
            Margin="0, 0, 0, 0">
            
            <Image
                
                Aspect="AspectFill"
                Source="{Binding ProductImage}"></Image>
            

        </Grid>

    </ContentView.Content>
</ContentView>